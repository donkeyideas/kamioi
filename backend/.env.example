# ==============================================================================
# Kamioi Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!
# ==============================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Security - REQUIRED: Generate strong random strings for production!
# Use: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=CHANGE_ME_generate_a_random_string_at_least_32_chars
SECRET_KEY=CHANGE_ME_generate_another_random_string

# Database Configuration
# For local development (SQLite):
DATABASE_URL=sqlite:///kamioi.db

# For production (PostgreSQL) - Use one of these providers:
# - Supabase: postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
# - Railway: postgresql://[user]:[password]@[host]:[port]/railway
# - Neon: postgresql://[user]:[password]@[host]/[database]?sslmode=require
# DATABASE_URL=postgresql://user:password@host:5432/kamioi

# CORS - Comma-separated list of allowed frontend origins
# For local development:
ALLOWED_ORIGINS=http://localhost:3764,http://localhost:5173,http://localhost:4604

# For production, use your actual frontend URL:
# ALLOWED_ORIGINS=https://your-app.vercel.app,https://www.kamioi.com

# Alpaca Trading API (Stock Purchases)
# Get your keys from: https://app.alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here
ALPACA_USE_SANDBOX=true

# Stripe Payment Integration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY_TEST=sk_test_your_test_secret_key
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_your_test_publishable_key
STRIPE_SECRET_KEY_LIVE=sk_live_your_live_secret_key
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_your_live_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_MODE=test

# AI/LLM APIs for Merchant-to-Stock Mapping
# DeepSeek API: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key

# Stock Price APIs (at least one required for price lookups)
# Alpha Vantage: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Finnhub: https://finnhub.io/dashboard
FINNHUB_API_KEY=your_finnhub_key

# Polygon.io: https://polygon.io/dashboard/api-keys
POLYGON_API_KEY=your_polygon_key

# Google AI (optional - for enhanced AI features)
GOOGLE_AI_API_KEY=your_google_ai_key

# OpenAI (optional - fallback AI)
OPENAI_API_KEY=your_openai_key

# Database Connection Pool Settings (for PostgreSQL)
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
